{
  "name": "@monorepo/backend",
  "version": "1.0.0",
  "description": "Hono.js backend for pageviews tracking",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "start": "bun run src/index.ts",
    "dev:visitors": "bun run --hot src/server/express-server.ts",
    "start:visitors": "bun run src/server/express-server.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "hono": "^4.0.0",
    "@hono/node-server": "^1.8.0",
    "@hono/zod-validator": "^0.2.0",
    "zod": "^3.22.0",
    "better-sqlite3": "^9.2.2",
    "drizzle-orm": "^0.29.0",
    "drizzle-kit": "^0.20.0",
    "express": "^4.18.0",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/bun": "^1.0.0",
    "@types/better-sqlite3": "^7.6.8",
    "@types/express": "^4.17.0",
    "@types/cors": "^2.8.0",
    "typescript": "^5.0.0"
  }
}
